<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chan.revernue.filterapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.HomeMainActivity"
            android:label="@string/title_activity_home_main"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ListItemCustomerProductEquipmentActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ItemCustomerActivity" />
        <activity android:name=".activity.HomeActivity" />
        <activity
            android:name=".activity.ListCustomerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        </activity>
    </application>

</manifest>